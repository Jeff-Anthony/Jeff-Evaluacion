<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sistema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Sistema de EvaluaciÃ³n"/>


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/sistema"
                android:entries="@array/calcu_prom"/>



            <TextView
                android:id="@+id/practicas"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_below="@+id/spinner1"
                android:text="Practicas Teoricas"/>

            <TextView
                android:id="@+id/prom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/spinner1"
                android:text="Prom: 0.0"/>



            <TextView
                android:id="@+id/practica1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practicas"
                android:text="Practica 1"/>

            <EditText
                android:id="@+id/prom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practicas"
                android:text=""/>


            <TextView
                android:id="@+id/practica2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practica1"
                android:text="Practica 2"/>

            <EditText
                android:id="@+id/prom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practica1"
                android:text=""/>



            //** Lab

            <TextView
                android:id="@+id/practicas_lab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_below="@+id/practica2"
                android:text="Practicas Laboratorios"/>

            <TextView
                android:id="@+id/prom_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas_lab"
                android:padding="16dp"
                android:layout_below="@+id/practica2"
                android:text="Prom: 0.0"/>


            <TextView
                android:id="@+id/practica1_lab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practicas_lab"
                android:text="Practica 1"/>

            <EditText
                android:id="@+id/prom1_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practicas_lab"
                android:text=""/>


            <TextView
                android:id="@+id/practica2_lab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practica1_lab"
                android:text="Practica 2"/>

            <EditText
                android:id="@+id/prom2_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practica1_lab"
                android:text=""/>


            <TextView
                android:id="@+id/practica3_lab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practica2_lab"
                android:text="Practica 3"/>

            <EditText
                android:id="@+id/prom3_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practica2_lab"
                android:text=""/>

            <TextView
                android:id="@+id/practica4_lab"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/practica3_lab"
                android:text="Practica 4"/>

            <EditText
                android:id="@+id/prom4_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/practicas"
                android:padding="16dp"
                android:layout_below="@+id/practica3_lab"
                android:text=""/>


            <TextView
                android:id="@+id/Promedio_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:padding="30dp"
                android:textColor="#0000FF"
                android:layout_below="@+id/prom4_lab"
                android:text="Promedio 0.0"/>


            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:padding="10dp"
                android:textColor="#39FF14"
                android:layout_below="@+id/Promedio_txt"
                android:text=""/>


            <Button
                android:id="@+id/calcular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/result"
                android:textSize="22dp"
                android:textColor="#FFFF"
                android:background="#BFF000"
                android:text="Calcular"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
